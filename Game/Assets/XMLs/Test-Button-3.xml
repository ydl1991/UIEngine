<?xml version="1.0" encoding="utf-8" ?>
<UI>
    <Stack>
        <Button width="300" height="100">
            <Image width="100%" height="100%" slices="4,4,4,4" source="Assets/Button/background-sliced.png" />
            <Label width="100%" height="100%" halign="center" valign="middle" button:states="up" text="Up" />
            <Label width="100%" height="100%" halign="center" valign="middle" button:states="over" text="Over" />
            <Label width="100%" height="100%" halign="center" valign="middle" button:states="down" text="Down" />
        </Button>
        <Button width="300" height="100">
            <Image button:states="up" width="100%" height="100%" source="Assets/Button/background-up.png" />
            <Image button:states="over" width="100%" height="100%" source="Assets/Button/background-over.png" />
            <Image button:states="down" width="100%" height="100%" source="Assets/Button/background-down.png" />
            <Label width="100%" height="100%" halign="center" valign="middle" text="Button!" />
        </Button>
        <Button height="50">
            <Image button:states="up,over,down" width="100%" height="100%" slices="4,4,4,4" source="Assets/Button/background-sliced.png" />
            <Label button:states="over,down" width="100%" height="100%" halign="center" valign="middle" text="Hello, mouse!" />
        </Button>
        <Button width="256" height="128">
            <Image button:states="up" width="100%" height="100%" source="Assets/Button/background-up.png" />
            <Image button:states="over" width="100%" height="100%" source="Assets/Button/background-over.png" />
            <Image button:states="down" width="100%" height="100%" source="Assets/Button/background-down.png" />
            <Label width="100%" height="100%" halign="center" valign="middle" button:states="up" text="Up" />
            <Label width="100%" height="100%" halign="center" valign="middle" button:states="over" text="Over" />
            <Label width="100%" height="100%" halign="center" valign="middle" button:states="down" text="Down" />
        </Button>
    </Stack>
</UI>

