        <Image width="100%" height="100%" slices="4,4,4,4" source="Assets/Button/background-sliced.png" />
        <Label width="100%" height="100%" halign="center" valign="middle"
            button:states="up"
            text="Up" />
        <Label width="100%" height="100%" halign="center" valign="middle"
